<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/exercises_header">
        <ListPreference
            app:defaultValue="2"
            app:entries="@array/language_entries"
            app:entryValues="@array/reply_language"
            app:key="ex_language"
            app:title="@string/language_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory app:title="Account">
        <Preference
            app:title="@string/pref_signout_title"
            app:key="pref_signOut"
            app:summary="@string/pref_signout_desc"/>
    </PreferenceCategory>

</PreferenceScreen>